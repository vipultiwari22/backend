<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Edit Blog Page</title>
    <%- include('./partials/head') %>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-3">
      <form
        action="/BlogRoute/Edit-blog/<%= allblog._id %>"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="coverImage" class="form-label">Cover Image</label>
          <img
            id="coverImagePreview"
            src="<%= allblog.coverImage %>"
            alt="Cover Image"
            class="img-fluid my-5 avatar-image"
            style="width: 100%; cursor: pointer"
            onclick="document.getElementById('coverImage').click();"
          />

          <input
            type="file"
            class="form-control d-none"
            id="coverImage"
            name="coverImage"
            onchange="previewFile()"
          />
        </div>
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            value="<%= allblog.title %>"
          />
        </div>
        <div class="mb-3">
          <label for="body" class="form-label">Body</label>
          <textarea name="body" class="form-control" id="body">
<%= allblog.body %></textarea
          >
        </div>
        <div class="mb-3">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
    <%- include('./partials/script') %>
    <script>
      function previewFile() {
        const preview = document.getElementById("coverImagePreview");
        const file = document.getElementById("coverImage").files[0];
        const reader = new FileReader();

        reader.addEventListener(
          "load",
          function () {
            preview.src = reader.result;
          },
          false
        );

        if (file) {
          reader.readAsDataURL(file);
        }
      }
      console.log("<%= allblog.coverImage %>");
    </script>
  </body>
</html>
