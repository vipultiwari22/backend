<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      .container {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 20px;
        background-color: antiquewhite;
      }
      .card {
        height: auto;
        width: 100%;
      }
      .card-img-top {
        height: 200px;
        object-fit: cover;
      }
      .card-text {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 4; /* Number of lines to show */
        overflow: hidden;
      }
    </style>
    <title>Home Page</title>
    <%- include('./partials/head') %>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-3">
      <% blogs.forEach(blog => { %>
      <div class="card">
        <img
          src="<%= blog.coverImage %>"
          class="card-img-top"
          alt="<%= blog.title %>"
        />
        <div class="card-body">
          <h5 class="card-title"><%= blog.title %></h5>
          <p class="card-text"><%= blog.body %></p>
          <a href="/BlogRoute/view-Blog/<%= blog._id %>" class="btn btn-primary"
            >Read More</a
          >
          <p class="card-title">Created by: <%= blog.createdBy.fullName %></p>
          <% if (locals.user) { %>
          <a href="/Blog/editBlog/<%= blog._id %>" class="btn btn-primary"
            >Edit</a
          >
          <a href="/BlogRoute/view-Blog/<%= blog._id %>" class="btn btn-primary"
            >view</a
          >
          <a href="/BlogRoute/del-Blog/<%= blog._id %>" class="btn btn-danger"
            >Delete</a
          >
          <% } %>
        </div>
      </div>
      <% }) %>
    </div>
    <%- include('./partials/script') %>
  </body>
</html>
