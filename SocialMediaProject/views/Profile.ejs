<%- include('./partials/head') %> <%- include('./partials/nav') %>
<div class="vh-100 bg-dark">
  <% if (locals.user) { %>
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-md-7">
        <div class="card p-3 py-4 mt-5">
          <div class="text-center">
            <img
              src="<%= locals.user.profileImage %>"
              width="100"
              class="rounded-circle"
            />
          </div>

          <div class="text-center mt-3">
            <h5 class="mt-2 mb-0"><%= locals.user.FullName %></h5>
            <span><%= locals.user.designation %></span>

            <div class="px-4 mt-1">
              <p class="fonts"><%= locals.userData.bio %></p>
            </div>

            <ul class="social-list">
              <li>
                <a href="<%=  locals.userData.socialLinks.facebook %>">
                  <i class="fa fa-facebook"></i>
                </a>
              </li>
              <li>
                <a href="<%=  locals.userData.socialLinks.instagram %>">
                  <i class="fa fa-instagram"></i>
                </a>
              </li>
              <li>
                <a href="<%=  locals.userData.socialLinks.linkedin %>">
                  <i class="fa fa-linkedin"></i>
                </a>
              </li>
            </ul>

            <div class="buttons">
              <button class="btn btn-outline-primary px-4">Message</button>
              <button class="btn btn-primary px-4 ms-3">Contact</button>
            </div>
            <div class="mt-2">
              <a href=" /edit-profile/" id="edit">
                <i class="far fa-edit mb-5"></i>
              </a>
            </div>
            <div class="Roles">
              <label for="role">Role:</label>
              <span class="profile-role"><%= locals.userData.role %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% } %> <%- include('./partials/script') %> <%- include('./partials/style') %>
